<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
    <form action = "register" onsubmit = "return false;">
        <div>姓名：<input type = "text" name = "username" id = "username"></div>
        <div>密码：<input type = "password" name = "pwd1" id="pwd1"></div>
        <div>确认密码：<input type = "password" name = "pwd2" id="pwd2"></div>
        <div><input type = "submit" value = "提交" id = 'btn'></div>
    </form>
    <script src = "/javascripts/jquery-1.11.2.js"></script>
<script>
    $(function(){
        $('#btn').on('click',function(){
            console.log(111);
            var username = $("#username").val();
            var p1 = $("#pwd1").val();
            var p2 = $("#pwd2").val();

            $.get('register',{
                name:username,
                pwd1:p1,
                pwd2:p2
            },function(data){
                if(data == 'pwd-error'){
                    $("#pwd2").after("<span>密码不一致</span>");
                }else{
                    $("#pwd2").after("<span>success</span>");
                }
            },'text');
        });
    });






</script>
</body>
</html>